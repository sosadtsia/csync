{
  "google_drive": {
    "credentials_path": "credentials.json",
    "token_path": "token.json",
    "scopes": ["https://www.googleapis.com/auth/drive.file"],
    "destination_path": "/photos/backup",
    "metadata": {
      "source": "csync-photos",
      "content_type": "media"
    }
  },
  "pcloud": {
    "api_host": "https://api.pcloud.com",
    "destination_path": "/photo-archives/2024"
  },
  "general": {
    "source_path": "./photos",
    "max_concurrency": 8,
    "retry_attempts": 5,
    "chunk_size_bytes": 33554432,
    "ignore_patterns": [
      ".DS_Store", "Thumbs.db", "desktop.ini", "*.tmp", "*.temp",
      ".picasa.ini", ".picasaoriginals/", "@eaDir/", ".@__thumb/"
    ],
    "include_patterns": [
      "*.jpg", "*.jpeg", "*.png", "*.gif", "*.bmp", "*.tiff", "*.tif",
      "*.webp", "*.raw", "*.cr2", "*.nef", "*.arw", "*.dng",
      "*.mp4", "*.mov", "*.avi", "*.mkv", "*.m4v", "*.wmv", "*.flv", "*.webm"
    ]
  },
  "optional": {
    "daemon": {
      "enabled": true,
      "sync_interval": "30m",
      "watch_mode": true,
      "pid_file": "csync-photos.pid"
    },
    "logging": {
      "log_file": "csync-photos.log",
      "log_level": "info"
    },
    "advanced": {
      "skip_existing": true,
      "preserve_mod_time": true
    }
  }
}
